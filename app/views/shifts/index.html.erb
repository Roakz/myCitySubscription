<p id="notice"><%= notice %></p>

<h1>Shifts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Start time</th>
      <th>Finish time</th>
      <th>Roster</th>
      <th>Location</th>
      <th>Cancellation</th>
      <th>Assigned volunteers</th>
      <th>Training requirements</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <td><%= shift.title %></td>
        <td><%= shift.date %></td>
        <td><%= shift.start_time %></td>
        <td><%= shift.finish_time %></td>
        <td><%= shift.roster_id %></td>
        <td><%= shift.location %></td>
        <td><%= shift.cancellation %></td>
        <td><%= shift.assigned_volunteers %></td>
        <td><%= shift.training_requirements %></td>
        <td><%= shift.description %></td>
        <td><%= link_to 'Show', shift %></td>
        <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
        <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shift', new_shift_path %>
